{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["es2015"],
    "module": "commonjs",
    "declaration": true,
    "outDir": "./build",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitUseStrict": true,
    "noUnusedLocals": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
